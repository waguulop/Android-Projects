<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentsActivity">
    <!-- TODO(28): Crear un androidx.appcompat.widget.Toolbar, con anchura completa y altura ajustable con id "toolbar" y con fondo "?android:attr/windowBackground" -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"/>
    <!-- TODO(29): Crear un androix Recylerview con altura ajustable y ancho completo, con id "recycle_view" e id "toolbar" con layout_below "toolbar" y layout_above "bottom"-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_below="@id/toolbar"
            android:layout_above="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <!-- TODO(30): Al RelativeLayout que sigue este todo, añadirle un fondo blanco, un padding de 4dp y que esté alineado en el fondo del elemento padre -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/bottom">

        <!-- TODO(31): Crear un elemento de.hdodenhof.circleimageview.CircleImageView con altura y anchura de 40dp, y con id "image_profile"-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <!-- TODO(32): Crear un elemento EditText de fondo transparente, con altura ajustable, ancho total, que muestre de texto "añadir un comentario" y los siguientes atributos-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@+id/image_profile"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/add_comment"
            android:layout_toLeftOf="@+id/post"/>
        <!-- TODO(33): Crear un elemento TextView con altura y anchura ajustable, con id "post", con color de texto colorPrimaryDark y los siguientes atributos-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>